/* pages/exchangeBox/placeOrder/placeOrder.wxss */
.imgbox{
  width: 100%;
  height: 240rpx;
  border:1rpx solid #e0e0e0;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.imgcon{
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}
.imgcon>image{
  width: 100%;
  height: 100%;
}
.detcon{
  margin-left: 40rpx;
  height: 200rpx;
}
.detcon>view:nth-child(1){
  font-size: 30rpx;

}
.detcon>view:nth-child(2){
  font-size: 36rpx;
  color: #e60012;
  font-weight: bold;
  margin-top: 10rpx;
}
/* pages/added/added.wxss */

.key {
  color: #fb2424;
}

.listbox {
  margin-bottom: 90rpx;
}

.listcon {
  border-bottom: 1rpx solid #e0e0e0;
  padding: 35rpx 30rpx;
  background: #fff;
  display: flex;
  /* align-items: center; */
}

.listTitle {
  color: #9f9f9f;
  font-size: 26rpx;
  margin-right: 30rpx;
  width: 125rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.input_box {
  flex: 1;
}

.section {
  height: 50rpx;
  line-height: 50rpx;
  flex: 1;
}

.picker_box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section image {
  width: 15rpx;
  height: 26rpx;
}

.textarea {
  padding: 10rpx;
  width: auto;
}

.add-image {
  width: 76rpx;
  height: 76rpx;
}

.justify-end {
  display: flex;
  justify-content: flex-end;
}

.flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dingwei {
  height: 40rpx;
  border: 1rpx solid #014099;
  color: #014099;
  padding: 8rpx 15rpx;
  margin: 0 8rpx;
  border-radius: 5rpx;
}
.subbox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 108rpx;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
}
.text{
  font-size: 30rpx;
  flex: 1;
  padding-right: 40rpx;
  text-align: right;
  line-height: 108rpx;
}
.Submission {
  width: 330rpx;
  height: 100%;
  background: #e60012;
  color: #fff;
  font-size: 37rpx;
  text-align: center;
  line-height: 108rpx;
  z-index: 100;
  border: 0;
  outline: none;
  border-radius: 0;
  margin: 0;
}
