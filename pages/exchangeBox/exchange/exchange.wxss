/* pages/exchangeBox/exchange/exchange.wxss */
.listBox{
  display: flex;
  flex-wrap: wrap;
}
.listcon{
  width: 50%;
  height: 475rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f2f5;
  box-sizing: border-box;
}
.borrit{
  border-right: 1rpx solid #f0f2f5;
}
.imgbox{
  width: 375rpx;
  height: 375rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f0f2f5;
}
.imgbox>image{
  width: 100%;
  height: 100%;
}
.describe{
  padding:20rpx 25rpx;
  /* padding-left: 32rpx; */
  box-sizing: border-box;
  
}
.describe>view:nth-child(1){
  color: #373737;
  margin-bottom: 3rpx;
  width: 100%;
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示5行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}
.describe>view:nth-child(2){
  color: 26rpx;
  color: #e60012;
}