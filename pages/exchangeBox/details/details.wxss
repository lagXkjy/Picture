/* pages/exchangeBox/details/details.wxss */
@import "../../../wxParse/wxParse.wxss";
.box{
  padding-bottom: 120rpx;
}
.slide-image{
  width: 100%;
}
.swiperbox{
  overflow: hidden;
  border-bottom: 1rpx solid #d1d0d4;
}
.jianjie{
  /* height: 95rpx; */
  background: #fff;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d1d0d4;
}
.jianjie>view{
  margin-top: 8rpx;
}
.jianjie>view:nth-child(2){
  color: #e60012;
  font-weight: bold;
}
.details{
  margin-top: 20rpx;
  border-top: 1rpx solid #d1d0d4;
  border-bottom: 1rpx solid #d1d0d4;
  background: #fff;
  box-sizing: border-box;
  padding: 15rpx 0;
  color: #666666;
}
.title{
  margin: 0rpx 30rpx;
  border-left: 4rpx solid #e60012;
  padding-left:25rpx; 
  box-sizing: border-box;
}
.power{
  padding-left: 30rpx;
  color: #666;
}
.power>view{
  margin-bottom: 3rpx;
}
.submit{
  width: 100%;
  height: 100rpx;
  background: #e60012;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}