/* pages/myBox/exchange/exchange.wxss */
.search{
  height: 100rpx;
  width: 100%;
  padding: 17rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.searchcon{
  height: 70rpx;
  position: relative;
}
.searchcon>image{
  width: 37rpx; 
  height: 37rpx;
  position: absolute;
  top:18rpx;
left:31rpx;

}
.searchcon>input{
  width: 100%;
  height: 100%;
  background: #f0f2f5;
  border-radius: 50rpx;
  padding-left: 100rpx;
  box-sizing: border-box;
}
.block{
  margin-top: 20rpx;
}
.listbox{
  background: #fff;
  margin-bottom: 10rpx;
}
.listcon{
  margin: 0 30rpx;
}
.ordernum{
  height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.imgbox{
  width: 100%;
  height: 240rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.imgcon{
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
}
.imgcon>image{
  width: 100%;
  height: 100%;
}
.detcon{
  margin-left: 40rpx;
  height: 200rpx;
}
.detcon>view:nth-child(1){
  font-size: 30rpx;

}
.detcon>view:nth-child(2){
  font-size: 36rpx;
  color: #e60012;
  font-weight: bold;
  margin-top: 10rpx;
}