/* pages/myBox/PassRecord/PassRecord.wxss */
.titlebox{
  display: flex;
  height: 85rpx;
  width: 100%;
  background: #fff;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx solid #e0e0e0
}
.title{
  height: 100%;
  width:80rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box; 
}
.active{
  color: #e60012;
  border-bottom: 3rpx solid #e60012;
}
.listbox{
  margin-top: 20rpx;
  background: #fff;
}
.list{
  height: 120rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.listimg>image{
  width:80rpx;
  height: 80rpx;
}
.listimg>video{
  width:80rpx;
  height: 80rpx;
}
.time{
 flex: 1;
 margin-left: 25rpx; 
}
.confirm{
  color: #e60012;
}
.Mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.delvideo {
  width: 750rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  background: #000;
}

.end {
  position: absolute;
  font-size: 50rpx;
  color: #fff;
  font-weight: bold;
  left: 50rpx;
  z-index: 100;
}
.video {
  width: 100%;
  height: 100%;
}