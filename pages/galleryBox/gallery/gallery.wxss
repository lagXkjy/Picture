/* pages/tabBar/gallery/gallery.wxss */
.imgBox{
  padding: 0 30rpx;
}
.titlebox{
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.videotitle{
  margin-top: 0;
}
.titleborder{
  width: 6rpx;
  height: 24rpx;
  background: #e60012;
  margin-right: 10rpx;
}
.imgcontent{
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  overflow: hidden;
}
.imgcon{
  width: 220rpx;
  height: 220rpx;
  margin-bottom: 30rpx;
  position: relative;
  margin-right: 11rpx;
}
.imgcon>image{
  width: 100%;
  height: 100%;
}
.describe{
  width: 100%;
  /* height: 100%; */
  text-align: center;
  padding-bottom: 10rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  box-shadow: inset 0px -15px 25px -15px #000;
}